@{
    ViewBag.Title = "Tabla de multiplicar";
}

<h1>Tabla del @ViewBag.Num</h1>

@if(ViewBag.Mensaje != null)
{
    <p>@ViewBag.Mensaje</p>
}
else
{
<ul>
    @for (int i = 1; i <= 10; i++)
    {
    <li>@ViewBag.Num x @i = @(ViewBag.Num * i)</li>
    }
</ul>
}