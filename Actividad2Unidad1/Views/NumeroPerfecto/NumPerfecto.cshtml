@{
    ViewBag.title = "Numero Perfecto";
}
<h1>Verificar si el numero es perfecto</h1>

<form method="post" action="@Url.Action("Confirmar")">
    <label for="num">Ingresa un numero: </label>
    <input type="number" id="num" name="num" required />
    <button type="submit">Confirmar</button>
</form>
