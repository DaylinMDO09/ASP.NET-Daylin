@{
    ViewBag.title = "Calculadora";
}

<h1>Calculadora</h1>

<form method="post" action="@Url.Action("Calcular", "Calculadora")">
    <label for="num1">Primer Valor: </label>
    <input type="number" id="num1" name="num1" required />

    <label for="num2">Segundo Valor: </label>
    <input type="number" id="num2" name="num2" required />

    <label for="calculo">Operacion</label>
    <select id="calculo" name="calculo">
        <option value="suma">Sumar</option>
        <option value="resta">Restar</option>
        <option value="multiplicacion">Multiplicar</option>
        <option value="division">Dividir</option>
    </select>
    <button type="submit">Calcular</button>
</form>
