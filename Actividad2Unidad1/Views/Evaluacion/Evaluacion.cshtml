@{
    ViewBag.Title = "Evaluacion del Estudiante";
}

<h1>Ingresar calificaciones</h1>

<form method="post" action="@Url.Action("CalcProm")">
    <label for="n1">Calificacion 1: </label>
    <input type="number" id="n1" name="n1" required min="0" max="100" />
    <label for="n2">Calificacion 2: </label>
    <input type="number" id="n2" name="n2" required min="0" max="100" />
    <label for="n3">Calificacion 3: </label>
    <input type="number" id="n3" name="n3" required min="0" max="100" />
    <label for="n4">Calificacion 4: </label>
    <input type="number" id="n4" name="n4" required min="0" max="100" />

    <button type="submit">Calcular Notas</button>
</form>
